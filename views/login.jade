  body.flat-blue.login-page
    .container
      .login-box
        div
          .login-form.row
            .col-sm-12.text-center.login-header
              i.login-logo.fa.fa-connectdevelop.fa-5x
                                       
              h4.login-title Intelligent-Fram
                                 
            .col-sm-12
                #login-progress.progress.hidden
                  .progress-bar.progress-bar-success.progress-bar-striped.active(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
                     Log In...
                                             
                form(action="/login" method="post")
                  .control
                    input.form-control(name="username" type='text', value='admin@gmail.com')
                                                   
                  .control
                    input.form-control(name="password" type='password', value='123456')
                                                   
                  .login-button.text-center
                    input.btn.btn-primary(type='submit', value='Login')
                                       
              .login-footer
                span.text-right
                  a.color-white(href='#') Signup
